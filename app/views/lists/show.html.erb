<div class="container">
  <h1><%= @list.name %></h1>
  <p><h3>Bookmarks</h3>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %> | <%= bookmark.comment %> | <%= link_to "Delete bookmark", list_bookmark_path(@list, bookmark), method: :delete,
            data: { confirm: "Are you sure?"}, class: "btn btn-primary"  %></li>
  <% end %></p>

  <p><%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %></p>
  <p><%= link_to "Back to list", lists_path, class: "btn btn-primary" %></p>
</div>
